# =============================================
# OBSIDIAN SOCIAL CLUB - Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Anthropic API (for Claude chatbot)
# Get this from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Obsidian Social Club

# Optional: Email Configuration (for reservation confirmations)
# RESEND_API_KEY=re_your-key-here
# EMAIL_FROM=reservaciones@obsidian.club

# Optional: Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
